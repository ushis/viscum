# Maintainer: ushi <ushi@honkgong.info>
pkgname=viscum-git
pkgver="$(date +'%Y%m%d')"
pkgrel=1
pkgdesc='viscum RSS/ATOM fecthing and processing server'
arch=('x86_64')
url='https://github.com/ushis/viscum'
license=('MIT')
depends=('postgresql')
makedepends=('git' 'go' 'godag-hg')
backup=('etc/viscum/viscum.conf' 'etc/viscum/viscumd.conf')
install='viscum.install'
provides=('viscum')
conflicts=('viscum')

_gitroot='git://github.com/ushis/viscum.git'
_gitname='viscum'

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'

  if [[ -d "${_gitname}" ]]; then
    cd "${_gitname}" && git pull origin
    msg 'The local files are updated.'
  else
    git clone "${_gitroot}" "${_gitname}"
  fi

  msg 'GIT checkout done or server timeout'
  msg 'Starting build...'

  rm -rf "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build"

  make
}

package() {
  cd "${srcdir}/${_gitname}-build"
  make DESTDIR="${pkgdir}/" install
}

# vim:set ts=2 sw=2 et:
